{% extends "base.html.twig" %}

{% block h_title %}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('login') }}
{% endblock %}

{% block content %}
<article class="grid">
    <div>
        <hgroup>
            <h1>Sign in</h1>
            <h2>This is a secured area</h2>
        </hgroup>

        {% if error %}
            <p class="error">{{ error.message }}</p>
        {% endif %}

        <form action="{{ path('login_check') }}" method="post">
            <input type="text" id="username" name="_username" placeholder="Login" aria-label="Login" autocomplete="nickname" required value="{{ last_username }}">
            <input type="password" id="password" name="_password" placeholder="Password" aria-label="Password" autocomplete="current-password" required>
            <button type="submit" class="contrast">Login</button>
        </form>
    </div>
    <div></div>
</article>
{% endblock %}
